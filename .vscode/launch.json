{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/amulet",
            "args": ["-substitute", "bpwtcl.aig", "miter.cnf", "rewritten.aig", "-v4"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/examples/sect3_usage",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "build"
        }
    ]
}